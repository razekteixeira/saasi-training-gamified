{
  "name": "saasi-escape-room",
  "version": "1.0.0",
  "description": "SAASI Escape Room - Sistema de Formação Interativa para Técnicos SAASI",
  "main": "public/index.html",
  "scripts": {
    "start": "cd public && python3 -m http.server 8000",
    "dev": "cd public && python3 -m http.server 8000",
    "serve": "cd public && python3 -m http.server 8000",
    "build": "echo 'Static build - no build step required'",
    "deploy": "firebase deploy",
    "validate": "echo 'Running validation checks...' && node scripts/validate.js",
    "backup": "node scripts/backup.js",
    "test": "echo 'Testing with local server' && npm run start"
  },
  "keywords": [
    "saasi",
    "escape-room",
    "training",
    "education",
    "game-based-learning",
    "portugal",
    "unemployment",
    "social-services"
  ],
  "author": "SAASI Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saasi/escape-room"
  },
  "devDependencies": {
    "firebase-tools": "^12.0.0"
  },
  "dependencies": {},
  "config": {
    "port": 8000,
    "host": "localhost"
  },
  "firebase": {
    "hosting": {
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "cleanUrls": true,
      "trailingSlash": false
    }
  }
}
